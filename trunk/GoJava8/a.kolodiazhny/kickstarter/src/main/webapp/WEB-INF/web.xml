<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>KickstarterWeb</servlet-name>
        <servlet-class>com.sandarovich.kickstarter.KickstarterWeb</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KickstarterWeb</servlet-name>
        <url-pattern>/kickstarter</url-pattern>
    </servlet-mapping>

    <env-entry>
        <env-entry-name>daoMode</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>db</env-entry-value>
    </env-entry>

    <resource-ref>
        <description>Primary database</description>
        <res-ref-name>jdbc/kickstarter</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/layouts/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF//layouts/404.jsp</location>
    </error-page>
    <!--<error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/layouts/500.jsp</location>
    </error-page>-->
</web-app>