<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">
      org.hibernate.dialect.MySQLDialect
   </property>
   <property name="hibernate.connection.driver_class">
      com.mysql.jdbc.Driver
   </property>

   <!-- Assume test is the database name -->
   <property name="hibernate.connection.datasource">
      java:comp/env/jdbc/KickstarterDS
   </property>
   
   <property name="show_sql">true</property>
   
   <property name="hibernate.current_session_context_class">
     org.hibernate.context.internal.ThreadLocalSessionContext
   </property>

   <!-- List of XML mapping files -->
   <mapping class="com.anmertrix.domain.Quote" />
   <mapping class="com.anmertrix.domain.Category" />
   <mapping class="com.anmertrix.domain.Project" />
   <mapping class="com.anmertrix.domain.Question" />
   <mapping class="com.anmertrix.domain.Answer" />
   <mapping class="com.anmertrix.domain.Payment" />
   <mapping class="com.anmertrix.domain.Reward" />
	
</session-factory>
</hibernate-configuration>