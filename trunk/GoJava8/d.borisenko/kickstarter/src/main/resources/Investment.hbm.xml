<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ua.dborisenko.kickstarter.domain.Investment" table="investments">
		<id name="id" type="int">
			<generator class="native" />
		</id>
		<many-to-one name="project" class="ua.dborisenko.kickstarter.domain.Project" fetch="select">
			<column name="project_id" not-null="true" />
		</many-to-one>
		<property name="cardHolderName" type="string" column="cardholder_name" />
		<property name="cardNumber" type="string" column="card_number" />
		<property name="amount" type="int" />
	</class>
</hibernate-mapping>
