<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:spring-test-config/datasource-test.properties,
                                            classpath:spring-test-config/hibernate-test.properties" system-properties-mode="OVERRIDE" ignore-resource-not-found="true"/>

    <import resource="classpath:spring-test-config/business-config-test.xml"/>
    <import resource="classpath:spring-test-config/datasource-config-test.xml"/>
    <import resource="classpath:spring/hibernate.xml"/>

</beans>